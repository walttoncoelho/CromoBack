// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["orderByNulls"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  papelId   Int
  papel     Papel    @relation(fields: [papelId], references: [id])
  status    Boolean
}

model Papel {
  id     Int    @id @default(autoincrement())
  titulo String
  codigo String @unique

  users User[]
}

model Numero {
  id            Int           @id @default(autoincrement())
  titulo        String
  descricao     String
  valor         Int
  status        Boolean
  ordemExibicao Int?
  formato       FormatoNumero @default(EXATO)
}

enum FormatoNumero {
  EXATO
  APROXIMADO
  DISTANCIA
  MONETARIO
}

model Lead {
  id         Int     @id @default(autoincrement())
  nome       String
  email      String
  telefone   String
  mensagem   String
  newsletter Boolean
  cidadeId   Int?
  cidade     Cidade? @relation(fields: [cidadeId], references: [id])
}

model Cidade {
  id         Int    @id @default(autoincrement())
  titulo     String
  codigoIbge Int    @unique
  estadoId   Int
  estado     Estado @relation(fields: [estadoId], references: [id])
  leads      Lead[]
}

model Estado {
  id         Int      @id @default(autoincrement())
  titulo     String   @unique
  uf         String   @unique
  codigoIbge Int      @unique
  cidades    Cidade[]
}
